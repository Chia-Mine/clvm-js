{
  "compilerOptions": {
    "outDir": "./.dist/npm",
    "module": "CommonJS",
    "target": "es2016",
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "newLine": "lf"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}